<script>
    function openTab(tabName) {
        const contents = document.getElementsByClassName('tab-content');
        const buttons = document.getElementsByClassName('tab-button');
        
        for (let content of contents) {
            content.classList.remove('active');
        }
        
        for (let button of buttons) {
            button.classList.remove('active');
        }
        
        document.getElementById(tabName).classList.add('active');
        event.target.classList.add('active');
    }
    
    function toggleAccordion(element) {
        element.classList.toggle('active');
        const content = element.nextElementSibling;
        content.classList.toggle('active');
    }
    
    function showHybridRole(role) {
        // Hide all paths and results first
        document.getElementById('sta-path').classList.remove('show');
        document.getElementById('vid-path').classList.remove('show');
        hideAllResults();
        
        // Show selected path
        if (role === 'sta') {
            document.getElementById('sta-path').classList.add('show');
        } else {
            document.getElementById('vid-path').classList.add('show');
        }
    }
    
    function showSTAScenario(scenario) {
        hideAllResults();
        if (scenario === 'vid-cr') {
            document.getElementById('sta-vid-cr').classList.add('show');
        } else if (scenario === 'vid-only') {
            document.getElementById('sta-vid-only').classList.add('show');
        } else if (scenario === 'cr-only') {
            document.getElementById('sta-cr-only').classList.add('show');
        }
    }
    
    function showVIDScenario(scenario) {
        hideAllResults();
        if (scenario === 'cr-only') {
            document.getElementById('vid-cr-only').classList.add('show');
        } else if (scenario === 'tech-cr') {
            document.getElementById('vid-tech-cr').classList.add('show');
        } else if (scenario === 'tech-only') {
            document.getElementById('vid-tech-only').classList.add('show');
        }
    }
    
    function hideAllResults() {
        const results = ['sta-vid-cr', 'sta-vid-only', 'sta-cr-only', 'vid-cr-only', 'vid-tech-cr', 'vid-tech-only'];
        results.forEach(id => {
            document.getElementById(id).classList.remove('show');
        });
    }
    
    function resetHybridTree() {
        document.getElementById('sta-path').classList.remove('show');
        document.getElementById('vid-path').classList.remove('show');
        hideAllResults();
    }
</script>
</body>
</html>
